<% layout("/layouts/boilerplate") %>
<div class="row mt-3 mb-3">
    <h2 class="col-6 offset-2">sign up wanderlust</h2>
    <div class="col-8 offset-2">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input class="form-control" name="username" type="text" id="username"  required>
                <div class="invalid-feedback">
                    pleas enter Username
                  </div>
            </div>
            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input class="form-control" name="email" type="email" id="email"  required>
                <div class="invalid-feedback">
                    pleas enter email
                  </div>
            </div> 
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" name="password" type="password" id="password"  required>
                <div class="invalid-feedback">
                    pleas set a password
                  </div>
            </div>
            <button class="btn btn-success edit-btn mt-2 mb-3">Sign in</button>
        </form>

    </div>
</div>       