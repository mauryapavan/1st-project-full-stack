<% layout("/layouts/boilerplate") %> 

  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 1.5rem;
      margin-top: 1rem;
      opacity: 0.8;
    }
    .filter:hover{
      opacity:1;
      cursor: pointer;
      font-size: 1.2rem;
      transition: 1s;
      margin-top:1px;
      
    }
    .gst{
      display: none;
    }
    .switch{
      text-align: center;
      border: 1px solid black;
      border-radius: 1rem;    
      margin-top: 1rem;
      opacity: 0.8;
      padding: 1rem;
      height: 3.5rem;
      display: flex;
      align-items:center;
     margin-left: 6rem;

    }
    .switch:hover{
      opacity:1;
      cursor: pointer;
    }

    .searchbtn{
      border: none;
      background-color: white;
      border-radius: 2rem;
    }
    .searchbtn:hover{
      box-shadow:2px 2px 10px rgb(41, 36, 36);
    }


  </style>

  <div id="filters">
    <div class="filter">
      <form method="post" action="/listing/search?q=farms">
        <button class="searchbtn">
          <div><i class="fa-solid fa-tractor"></i></div>
           <p >farms</p>
        </button>
      </form>
      
    </div>
    <div class="filter">
      <form method="post" action="/listing/search?q=rooms">
        <button class="searchbtn">
         <div><i class="fa-solid fa-bed"></i></div>
         <p>Rooms</p>
         </button>
      </form>
       
    </div>
    <div class="filter">
      <form method="post" action="/listing/search?q=iconic cities">
        <button class="searchbtn">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>iconic cities</p>
         </button>
      </form>
    </div>
    <div class="filter">
      <form method="post" action="/listing/search?q=mountains">
        <button class="searchbtn">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
        </button >
      </form>
    </div>
    <div class="filter">
     <form method="post" action="/listing/search?q=camping">
      <button class="searchbtn">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </button>
     </form>
    </div>
    <div class="filter">
      <form method="post" action="/listing/search?q=arctic">
        <button class="searchbtn">
          <div><i class="fa-solid fa-person-snowboarding"></i></div>
          <p>Arctic</p>
        </button>
      </form>
    </div>
    <div class="switch">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Total Price after Taxes</label>
      </div>
    </div>
  </div>
 <div class="maincontaint">
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
        <%for(let listing of allListing){%>
          <a href="/listing/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>

                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.tittle %></b> <br>
                    &#8377; <%= listing.price.toLocaleString('en-IN')%>/night
                    <i class="gst"> &nbsp; +18% GST</i>
                  </p>
                </div>
              </div>
            </a>
            <%}%> 
    </div>
    
    
  </div>

<script>
  let taxebtn=document.getElementById("flexSwitchCheckDefault");
  taxebtn.addEventListener("click",()=>{
    let  allgst=document.getElementsByClassName("gst");
    for(gst of allgst){
      if(gst.style.display!="inline"){
        gst.style.display="inline";
      }
      else{
        gst.style.display="none";
      }
    }
  })
</script>