<% layout("/layouts/boilerplate") %>
<div class="row">  
  <div class="col-8 offset-2">
  <h3>Create New Listing</h3>
  <br>
      <form method="POST" action="/listing" class="needs-validation" novalidate enctype="multipart/form-data" >
      <div class="mb-2" >
        <label for="title" class="form-label">TITLE</label>
        <input name="listing[tittle]" type="text" placeholder="enter tittle" class="form-control" required>
        <div class="invalid-feedback">
          pleas enter Tittle
        </div>
      </div>
      <div class="mb-2">
        <label  for="description" class="form-label">DESCRIPTION</label>
        <textarea class="form-control" name="listing[description]" placeholder="enter description" id="" required></textarea>
        <div class="invalid-feedback">
           enter description
        </div>
      </div>
      
      <div class="mb-2">
        <label for="image" class="form-label">image</label>
        <input class="form-control" name="listing[image]" type="file" placeholder="uplaod image" required >
      </div>
      <div class="row">
        <div class="mb-2 col-md-4">
          <label for="price" class="form-label">PRICE</label>
          <input class="form-control" name="listing[price]" type="text" placeholder="enter price" required>
          <div class="invalid-feedback">
            please enter price
          </div>
        </div>
        <div class="mb-2 col-md-8 ">
          <label for="country" class="form-label">COUNTRY</label>
          <input class="form-control" name="listing[country]" type="text" placeholder="enter country name" required>
          <div class="invalid-feedback">
            please fill the country name !
          </div>
        </div>
      </div>

      <div class="mb-2">
        <label for="location" class="form-label">LOCATION</label>
        <input class="form-control" name="listing[location]" type="text" placeholder="enter location" required>
        <div class="invalid-feedback">
          enter location
        </div>
      </div>
      <div class="mb-2 mt-1">
        <label for="select" class="form-label">Choose the type of places</label>
        <br>
        <select name="listing[category]" id="" class="col-8">
          <option value="farms">farms</option>
          <option value="rooms">rooms</option>
          <option value="iconic cities">iconic cities</option>
          <option value="mountains">mountains</option>
          <option value="camping">camping</option>
          <option value="arctic">arctic</option>
        </select>
      </div>
      
      <br><br>
       <button class="btn btn-dark add-btn">SUBMIT</button>
       <br><br>
    </form>
  </div>

  </div>
